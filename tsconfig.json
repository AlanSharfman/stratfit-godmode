{
    "compilerOptions": {
        "target": "ES2022",
        "useDefineForClassFields": true,
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "strict": true,
        "noEmit": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/_quarantine/**",
        "src/onboard/**",
        "src/pitch/**",
        "src/strategy/**",
        "src/components/compound/variances2/**",
        "src/components/compound/_variances2_DISABLED/**",
        "node_modules",
        "dist",
        "build",
        ".vercel",
        ".next",
        "coverage"
    ]
}